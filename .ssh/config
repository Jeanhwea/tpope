# ~/.ssh/config
# vim:set ft=sshconfig:

Host matthew.*
	HostKeyAlias matthew

Host todd.*
	HostKeyAlias todd

Host lucas.*
	HostKeyAlias lucas

Host gideon.*
	HostKeyAlias gideon

Host roxy.*
	HostKeyAlias roxy

Host *.tpope.us matthew* todd* lucas* gideon* roxy*
	ForwardX11 yes

Host trp
	ProxyCommand none
	Hostname tpope.us
	HostKeyAlias michael
	CheckHostIP no
	ForwardX11 no
	ServerAliveInterval 240

Host *.p
	ProxyCommand connect -H www.tpope.net `echo %h|sed -e s/\.p$//` %p

Host *.proxy
	ProxyCommand connect -H www.tpope.net `echo %h|sed -e s/\.proxy$//` %p

Host *.tpope.us *.t
	ProxyCommand ssh -ax trp nc -q 1 `echo %h|sed -e s/\.t.*$//` %p 2>/dev/null

Host tpope.us cunn.iling.us
	CheckHostIP no
	# DynamicForward 1080

Host tpope.net tpo.pe
	HostName maeby.tpope.net
	ServerAliveInterval 240

Host github.com
	User git

Host *.h
	ProxyCommand ssh -ax ci.hshrckt.com nc -q 1 `echo %h|sed -e 's/\.h.*$/.local/'` %p 2>/dev/null

Host *.* localhost
	ProxyCommand none

Host *
	User tpope
	ForwardAgent yes
	ProxyCommand sh -c '$HOME/bin/tpope hostman --tunnel %h %p'
