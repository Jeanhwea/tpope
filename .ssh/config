# ~/.ssh/config
# vim:set ft=sshconfig:

Host matthew.* brandon.* brandon
	HostKeyAlias brandon

Host todd.* drogo.* drogo
	HostKeyAlias drogo

Host lucas.* lyanna.* lyanna
	HostKeyAlias lyanna

Host gideon.* rhaegar.* rhaegar
	HostKeyAlias rhaegar

Host roxy.* varys.* varys
	HostKeyAlias varys

Host ken.* balon.* balon
	HostKeyAlias balon

Host kyle.* renly.* renly
	HostKeyAlias renly

Host tywin.*
	HostKeyAlias tywin

Host *.tpope.us drogo* lyanna*
	ForwardX11 yes

Host home
	ProxyCommand none
	Hostname tpope.dyndns.org
	HostKeyAlias renly
	CheckHostIP no
	ForwardX11 no
	ForwardAgent no

Host *.tpope.us *.t
	ProxyCommand ssh -ax home nc `echo %h|sed -e 's/\.t.*$//'` %p 2>/dev/null

Host tpope.us
	CheckHostIP no

Host tpope.net tpo.pe
	HostKeyAlias varys
	HostName varys.tpope.net

Host *.* localhost
	ProxyCommand none

Host *
	User tpope
	ForwardAgent yes
	VerifyHostKeyDNS yes
	ProxyCommand sh -c '$HOME/bin/tpope hostman tunnel %h %p'
	ControlMaster auto
	ControlPath /tmp/ssh_mux_tpope_%h_%p_%r
